.header {
 
}
.navbar {
    background: #fff;
    padding: 0.5rem 1rem;
    line-height: 2.2rem;
    position: sticky;
    top: 0;
    z-index: 200;
    font-weight: 700;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
    .nav_inner {
        font-weight: 500;
        font-size: 14px;
        align-items: stretch;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        width: 100%;
        a {
            padding: 0.25rem 1rem;
            transition: color .3s;
            &:hover {
                color: #25c2a0;
            }
        }
    }
}
.footer {
    background: #303846;
    color: #fff;
    margin-top: 30px;
    font-size: 0.87rem;
    .text--center {
        padding: 4px 0px;
        }
    .col {
        p {
            font-size: 0.85rem;
        }
    }
    a {
        color: #fff;
    }
}
.n_item {
    align-items: center;
    display: flex;
    flex: 1 1 auto;
    &.n_right {
        justify-content: flex-end;
        .n_right {
            a {
                cursor: pointer;
                
            }
        }
    }
}
body {
    margin: 0px;
    font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,sans-serif,BlinkMacSystemFont,Helvetica,Arial,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
}
.container {
    margin-left: auto;
    margin-right: auto;
    max-width: 1140px;
    width: 100%;
}
.row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-left: -1rem;
    margin-right: -1rem;    
}
.col {
    padding-left: 1rem;
    padding-right: 1rem;
    &.col-2 {
        max-width: 50%; 
        flex: 0 0 50%;
        box-sizing: border-box;
    }
    &.col-4 {
        max-width: 33.33333%;
        flex: 0 0 33.33333%;
        box-sizing: border-box;
    }
}
@media (max-width: 996px) {
    .col {
        margin-left: 0px !important;
        flex-basis: 100% !important;
        max-width: 100% !important;
    }
}
.text--center {
    text-align: center;
    }
.navbar .n_item {
   a {
       color: #1c1e21;
   } 
}
a {
    font-weight: 500;
    text-decoration: none;
}
strong {
    font-weight: bolder;
    font-size: 15px;
}