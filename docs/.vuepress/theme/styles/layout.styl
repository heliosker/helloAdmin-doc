.theme-container {
    .c_top {
        color: #fff;
        background: #6574cd;
        padding: 5rem 0;
        text-align: center;
        .c_title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
        }
        .c_subtitle {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }
        .c_btn {
            display: flex;
            align-items: center;
            justify-content: center;
            a {
                text-decoration: none;
                border: 2px solid #fff;
                outline: none;
                border-radius: 0.4rem;
                color: #fff;
                padding: 0.75rem 2rem;
                font-size: 1rem;
                line-height: 1.5;
            }
        }
    }
    .feature {
        img {
            width 200px;
        } 
        .text--center {
            p {
                text-align: center;
                line-height: 24px;
                padding-top: 10px;
                color: #555;
            }
        } 
        h3 {
            margin-top: 0px;
        }  
    }
}